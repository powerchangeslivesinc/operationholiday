{
  "compilerOptions": {
    "target": "ES2020",               // Modern JS target
    "module": "CommonJS",             // Node.js compatible module system
    "rootDir": "./",                  // Where TS source files live
    "outDir": "./dist",               // Where compiled JS files go
    "strict": true,                   // Enable strict type checking
    "esModuleInterop": true,          // Required for default imports (express, cors)
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true              // Skip type checks for node_modules
  },
  "include": ["server.ts", "models/**/*.ts", "routes/**/*.ts"]
}
